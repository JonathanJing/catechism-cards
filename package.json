{
  "name": "catechism-cards",
  "version": "1.0.0",
  "description": "威斯敏斯特小要理问答转Anki学习卡片工具",
  "main": "src/index.js",
  "scripts": {
    "dev": "react-scripts start",
    "build": "react-scripts build", 
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "export:anki": "python scripts/anki_exporter.py",
    "export:anki:cn": "python scripts/anki_exporter.py --data=data/westminster_catechism_cn.json --output=output/cn/",
    "export:anki:en": "python scripts/anki_exporter.py --data=data/westminster_catechism_en.json --output=output/en/",
    "process:data": "python scripts/data_processor.py",
    "preview": "serve -s build"
  },
  "keywords": [
    "catechism",
    "anki",
    "flashcards",
    "westminster",
    "christian",
    "education",
    "memorization"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "react-router-dom": "^6.8.0",
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "^2.0.0",
    "tailwindcss": "^3.2.0",
    "axios": "^1.3.0",
    "js-cookie": "^3.0.0",
    "react-hot-toast": "^2.4.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/js-cookie": "^3.0.0",
    "typescript": "^4.9.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "serve": "^14.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/catechism-cards.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/catechism-cards/issues"
  },
  "homepage": "https://github.com/yourusername/catechism-cards#readme"
} 